<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route method="GET" url="/V1/promo_advanced/:id">
        <service class="Caraque\PromoAdvanced\Api\PromoAdvancedRepositoryInterface" method="getById"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="POST" url="/V1/promo_advanced">
        <service class="Caraque\PromoAdvanced\Api\PromoAdvancedRepositoryInterface" method="save"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="PUT" url="/V1/promo_advanced">
        <service class="Caraque\PromoAdvanced\Api\PromoAdvancedRepositoryInterface" method="save"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="DELETE" url="/V1/promo_advanced/:id">
        <service class="Caraque\PromoAdvanced\Api\PromoAdvancedRepositoryInterface" method="deleteById"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
